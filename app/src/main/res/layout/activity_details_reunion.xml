<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    tools:context=".ui.reunion_list.DetailReunionActivity"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:padding="10dp"
    android:layout_marginTop="130dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titre_Reunion"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:text="DETAIL REUNION " />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/nom_Reunion"
            android:layout_width="120dp"
            android:layout_height="38dp"
            android:text="Nom Reunion :" />

        <EditText
            android:id="@+id/inom_Reunion"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:hint="Nom"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/intitule_Reunion"
            android:layout_width="120dp"
            android:layout_height="38dp"
            android:text="IntitulÃ© Reunion :" />

        <EditText
            android:id="@+id/iintitule_Reunion"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:hint="Intitule"
            android:inputType="textAutoComplete" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/date_Reunion"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Date Reunion :" />

        <EditText
            android:id="@+id/idate_Reunion"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:hint="JJ:MM:AAAA"
            android:inputType="date" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/heure_Reunion"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Heure Reunion :" />

        <EditText
            android:id="@+id/iheure_Reunion"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:hint="HH:MM"
            android:inputType="time" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/nom_salle_Reunion"
            android:layout_width="120dp"
            android:layout_height="38dp"
            android:text="Nom Salle :" />


        <EditText
            android:id="@+id/inom_salle_Reunion"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:hint="salle"
            android:inputType="textAutoComplete" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/participants_Reunion"
            android:layout_width="120dp"
            android:layout_height="38dp"
            android:text="Liste participants :" />

        <EditText
            android:id="@+id/iparticipant_Reunion"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:hint="Participant"
            android:inputType="text" />
    </LinearLayout>

    <Button
        android:id="@+id/return_back"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cornerRadius="20dp"
        android:layout_marginTop="20dp"
        android:text="Retour"/>
</LinearLayout>