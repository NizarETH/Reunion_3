<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    tools:context=".ui.reunion_list.AddReunionActivity"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:padding="10dp"
    android:layout_marginTop="130dp"
    android:background="@color/light_grey"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titre_Reunion"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="AJOUT REUNION " />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
       <TextView
        android:id="@+id/nom_Reunion"
        android:layout_width="120dp"
        android:layout_height="38dp"
        android:text="Nom Reunion :" />

        <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/inom_Reunion"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:hint="Nom"
        android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
       <TextView
        android:id="@+id/intitule_Reunion"
        android:layout_width="120dp"
        android:layout_height="38dp"
        android:text="IntitulÃ© Reunion :" />

        <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/iintitule_Reunion"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:hint="Intitule"
        android:inputType="textAutoComplete" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/date_Reunion"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Date_R :" />

        <EditText
            android:id="@+id/idate_Reunion"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:hint="JJ:MM:AAAA"
            android:inputType="date" />
        <CheckBox
            android:id="@+id/checkBox_isSpinnerMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spinner Mode?"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idate_Reunion" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/heure_Reunion"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Heure_R :" />

        <EditText
            android:id="@+id/iheure_Reunion"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:hint="HH:MM"
            android:inputType="time" />
        <CheckBox
            android:id="@+id/checkBoxH_isSpinnerMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S.Mode?"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iheure_Reunion" />
        <CheckBox
            android:id="@+id/checkBox_is24HView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="24H.m?"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBox_isSpinnerMode" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/nom_salle_Reunion"
            android:layout_width="120dp"
            android:layout_height="38dp"
            android:text="Nom Salle :" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inom_salle_Reunion"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:hint="salle"
            android:inputType="textAutoComplete" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
      <TextView
        android:id="@+id/participants_Reunion"
        android:layout_width="120dp"
        android:layout_height="38dp"
        android:text="Liste participants :" />

        <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/iparticipant_Reunion"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:hint="Participant"
        android:inputType="text" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/create"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:layout_gravity="center"
        app:cornerRadius="20dp"
        android:layout_marginTop="20dp"
        android:text="Save"/>
</LinearLayout>